<%= form_for @article do |f| %>
 
  <% if @article.errors.any? %>
    <div class="error-msg">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="row add__content">
    <div class="col-md-6">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
      <%= f.label :image %><br>
      <%= f.text_field :image %>
      <%= f.label :text %><br>
      <%= f.text_area :text %>

      <%= f.submit :class => "btn" %>
      <%= link_to 'Back', articles_path, class: "btn" %>
    </div>
  </div>
 
<% end %>