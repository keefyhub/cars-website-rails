  <section class="wrapper container">
    <section class="content__cars">

      <h3><%= @article.title %></h3>
      <div class="row"> 
        <div class="col-md-6 content__car">
          <div class="content__image">
            <%= image_tag @article.image %>
            <div class="content__info">
              <div class="content_comments">
                <i class="fa fa-commenting"></i>
              </div>
              <div class="content__download">
                <i class="fa fa-cloud-download"></i>
              </div>
              <div class="content_email">
                <i class="fa fa-envelope"></i>
              </div>
            </div>
          </div>
          <p><%= @article.text %></p>

          <%= link_to 'Edit', edit_article_path(@article), class: "btn" %>
          <%= link_to 'Back', articles_path, class: "btn" %>
          <%= button_to 'Destroy', article_path(@article), class: "btn",
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

        </div>
      </div>
  </section>
</section>