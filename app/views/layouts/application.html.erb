<!DOCTYPE html>
<html>
<head>

  <meta charset="utf-8">
  <title>Cars Website - Skills Test</title>
  <meta name="description" content="">

  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!--// STYLE SHEETS //-->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <!--// OLD BROWSERS //-->
  <!--[if lt IE 9]>
    <link rel="stylesheet" href="build/css/ie.css">
    <script src="build/js/html5.js"></script>
  <![endif]-->

  <%= csrf_meta_tags %>
</head>
<body>

  <!--// BROWSEHAPPY NOTICE //-->
  <!--[if lt IE 9]>
    <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
  <![endif]-->

  <!-- START HEADER //-->
  <header class="header-bar">
    <div class="menu-icon">
      <i class="fa fa-bars"></i>
    </div>
    <div class="container header__logo text-right">
      <%= image_tag "company-logo.png" %>
    </div>
  </header>
  <!--// END HEADER -->

  <!-- START NAV BAR //-->
  <nav class="main-menu">
    <div class="user-info">
      <div class="user__avatar">
        <span class="fa-stack fa-lg">
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fa fa-user fa-stack-1x"></i>
        </span>
      </div>
      <div class="user__username">
        Guest
      </div>
      <div class="user__status">
        Not logged in
      </div>
    </div>

    <div class="main-menu__nav">
      <h4>Navigation</h4>
      <ul class="main-menu__navigation">
        <li><a href="#"><i class="fa fa-home"></i> Homepage</a></li>
        <li><a href="#"><i class="fa fa-arrow-circle-o-right"></i> Products</a>
          <ul class="navigation__sub-menu">
            <li><a href="#">Example Sub Item</a></li>
          </ul>
        </li>
        <li><a href="#"><i class="fa fa-question"></i> About Us</a></li>
        <li><a href="#"><i class="fa fa-pencil"></i> Blog</a></li>
        <li><a href="#"><i class="fa fa-newspaper-o"></i> Knowledgebase</a></li>
        <li><a href="#"><i class="fa fa-comments-o"></i> Support forums</a></li>

        <li><h4>Accounts</h4></li>
        <li><a href="#"><i class="fa fa-user"></i> Register</a></li>
        <li><a href="#"><i class="fa fa-lock"></i> Login</a></li>

        <li><h4>Search</h4></li>
        <li class="main-menu__search">
          <input type="search" class="main-menu__search" placeholder="Example...">
          <i class="fa fa-search"></i>
        </li>
      </ul>
    </div>
  </nav>
  <!--// END NAV BAR -->

  <!-- START MAIN CONTENT //-->
  <section class="wrapper container">

    <section class="breadcrumbs">
      Blog / All Posts
    </section>

    <h2 class="content__title">Example Title</h2>
    <h3 class="content__sub-title">Example of a subheading</h3>

    <%= yield %>

  </section>
  <!--// END MAIN CONTENT -->

  <!-- START FOOTER //-->
  <footer>
  </footer>
  <!--// END FOOTER -->

  <!--// NO CONTENT SHOULD GO UNDER HERE //-->

  <!--// JAVASCRIPT //-->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>
